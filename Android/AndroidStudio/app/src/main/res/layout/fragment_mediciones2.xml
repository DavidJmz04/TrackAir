<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Calidad del aire (ultimas 24H): "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calidadAire"
        android:layout_width="158dp"
        android:layout_height="27dp"
        android:text="Actualizando..."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/textview12"
        app:layout_constraintTop_toBottomOf="@+id/textview12" />

    <Button
        android:id="@+id/MedicionesButton"
        android:layout_width="223dp"
        android:layout_height="54dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Empezar a medir"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/calidadAire"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="@+id/calidadAire"
        app:layout_constraintTop_toBottomOf="@+id/calidadAire" />

    <WebView
        android:id="@+id/webview"
        android:layout_width="418dp"
        android:layout_height="569dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/calidadAire"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="@+id/textview12" />

</androidx.constraintlayout.widget.ConstraintLayout>